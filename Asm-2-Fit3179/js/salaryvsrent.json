{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#faf0e6",
  "params": [
    {
      "name": "CL_LPP_Index_Selection",
      "value": 500,
      "bind": {
        "input": "range",
        "min": 500,
        "max": 3500,
        "step": 50,
        "name": "CL_LPP_Index: "
      }
    }
  ],
  "hconcat": [
    {
      "width": 200,
      "height": 400,
      "title": {
        "text": "Apartment in City Center",
        "fontSize": 15,
        "color": "black"
      },
      "data": {
        "url": "https://raw.githubusercontent.com/jytKelly12/FIT3179/main/cost-of-living_v2.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "filter": "datum.country === 'Australia' && datum.x54 !== 'nan' && datum.x48 !== 'nan' "
        },
        {"calculate": "datum.x54 - datum.x48", "as": "CL_LPP_Index"},
        {
          "window": [{"op": "rank", "as": "rank", "field": "CL_LPP_Index"}],
          "sort": [{"field": "CL_LPP_Index", "order": "descending"}]
        },
        {"filter": "datum.CL_LPP_Index >= CL_LPP_Index_Selection"}
      ],
      "layer": [
        {
          "mark": {"type": "circle", "tooltip": true, "size": 200},
          "encoding": {
            "x": {
              "field": "x54",
              "type": "quantitative",
              "title": "Average Monthly Net Salary (After Tax) (USD)",
              "scale": {
                "domain": [2000, 5000],
                "bins": [2000, 2500, 3000, 3500, 4000, 4500, 5000]
              }
            },
            "y": {
              "field": "x48",
              "type": "quantitative",
              "title": "Rent Price",
              "axis": {
                "domain": false,
                "gridColor": "#242c32",
                "labelColor": "black",
                "titleColor": "black",
                "labelFontWeight": "bold",
                "titleFontWeight": "bolder",
                "grid": false
              }
            },
            "color": {
              "condition": {
                "test": "datum.CL_LPP_Index === {param: \"CL_LPP_Index\"}",
                "value": "gold"
              },
              "field": "CL_LPP_Index",
              "type": "quantitative",
              "title": "CL_LPP_Index",
              "scale": {"range": ["red", "white", "blue"]}
            },
            "tooltip": [
              {"field": "city", "type": "nominal", "title": "City"},
              {
                "field": "x54",
                "type": "ordinal",
                "title": "Average Monthly Net Salary (After Tax) (USD)"
              },
              {
                "field": "x48",
                "type": "quantitative",
                "title": "Apartment (1 bedroom) in City Centre (USD)"
              },
              {
                "field": "CL_LPP_Index",
                "type": "quantitative",
                "title": "CL_LPP_Index"
              }
            ]
          }
        },
        {
          "mark": {"type": "text", "dx": 100, "dy": 45, "baseline": "middle"},
          "encoding": {
            "text": {"value": " Muswellbrook apartments in city "},
            "x": {"value": 0},
            "y": {"value": 0}
          }
        },
        {
          "mark": {"type": "text", "dx": 100, "dy": 60, "baseline": "middle"},
          "encoding": {
            "text": {"value": "center is the least affordable "},
            "x": {"value": 0},
            "y": {"value": 0}
          }
        },
        {
          "mark": {"type": "text", "dx": 160, "dy": 245, "baseline": "middle"},
          "encoding": {
            "text": {"value": " Darwin apartments in"},
            "x": {"value": 0},
            "y": {"value": 0}
          }
        },
        {
          "mark": {"type": "text", "dx": 160, "dy": 260, "baseline": "middle"},
          "encoding": {
            "text": {"value": "city center is "},
            "x": {"value": 0},
            "y": {"value": 0}
          }
        },
        {
          "mark": {"type": "text", "dx": 160, "dy": 275, "baseline": "middle"},
          "encoding": {
            "text": {"value": "the most affordable "},
            "x": {"value": 0},
            "y": {"value": 0}
          }
        }
      ]
    },
    {
      "width": 200,
      "height": 400,
      "title": {
        "text": "Apartment Outside City Center",
        "fontSize": 15,
        "color": "black"
      },
      "data": {
        "url": "https://raw.githubusercontent.com/jytKelly12/FIT3179/main/cost-of-living_v2.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "filter": "datum.country === 'Australia' && datum.x54 !== 'nan' && datum.x49 !== 'nan' "
        },
        {"calculate": "datum.x54 - datum.x49", "as": "CL_LPP_Index"},
        {"filter": "datum.CL_LPP_Index >= CL_LPP_Index_Selection"}
      ],
      "mark": {
        "type": "square",
        "tooltip": true,
        "size": 200,
        "cornerRadius": 10
      },
      "encoding": {
        "x": {
          "field": "x54",
          "type": "quantitative",
          "title": "Average Monthly Net Salary (After Tax) (USD)",
          "scale": {
            "domain": [2000, 5000],
            "bins": [2000, 2500, 3000, 3500, 4000, 4500, 5000]
          }
        },
        "y": {
          "field": "x49",
          "type": "quantitative",
          "title": "Rent Price",
          "axis": {
            "domain": false,
            "gridColor": "#242c32",
            "labelColor": "black",
            "titleColor": "black",
            "labelFontWeight": "bold",
            "titleFontWeight": "bolder",
            "grid": false
          }
        },
        "color": {
          "condition": {
            "test": "datum.CL_LPP_Index === {param: \"CL_LPP_Index\"}",
            "value": "gold"
          },
          "field": "CL_LPP_Index",
          "type": "quantitative",
          "title": "CL_LPP_Index",
          "scale": {"range": ["red", "white", "blue"]}
        },
        "tooltip": [
          {"field": "city", "type": "nominal", "title": "City"},
          {
            "field": "x49",
            "type": "quantitative",
            "title": "Apartment (1 bedroom) Outside of Centre (USD)"
          },
          {
            "field": "CL_LPP_Index",
            "type": "quantitative",
            "title": "CL_LPP_Index"
          }
        ]
      }
    }
  ],
  "config": {"style": {"geoshape": {"stroke": "black", "strokeWidth": 0.5}}
  }}